{
	"name": "gptbot",
	"version": "0.0.1",
	"author": "gujianjie",
	"type": "module",
	"scripts": {
		"start": "npm run dev",
		"dev": "tsx watch src/main.ts",
		"lint": "eslint . && prettier -c src",
		"lint:fix": "eslint . --fix && prettier -c -w src",
		"prepare": "husky install"
	},
	"devDependencies": {
		"esbuild": "^0.17.19",
		"eslint": "^8.41.0",
		"eslint-config-unjs": "^0.1.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"tsx": "^3.12.7"
	},
	"dependencies": {
		"@types/qrcode": "^1.5.0",
		"chalk": "^5.2.0",
		"dotenv": "^16.0.3",
		"langchain": "^0.0.78",
		"node-schedule": "^2.1.1",
		"openai": "^3.2.1",
		"qrcode": "^1.5.3",
		"wechaty": "^1.20.2",
		"wechaty-puppet-wechat": "^1.18.4"
	},
	"lint-staged": {
		"**/*.{ts,js}": [
			"npx eslint --fix",
			"npx prettier --write"
		],
		"**/*.md": [
			"npx prettier --write"
		]
	}
}
